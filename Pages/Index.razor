        opacity: 0.6;
    }
    
    @@media (max-width: 768px) {
        .time {
            font-size: 2.5rem;
        }
        
        .btn-large {
            min-width: 120px;
            padding: 0.75rem 1.5rem;
            font-size: 1rem;
        }
    }
</style>
